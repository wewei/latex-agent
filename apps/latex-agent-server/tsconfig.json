{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["node"],        // 仅声明 @types 包名
    "typeRoots": [            // 指定类型文件根目录
      "./node_modules/@types",
      "./src/types",
      "./types"
    ]
  },
  "include": ["src/**/*","src/types/**/*.d.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules"]
} 